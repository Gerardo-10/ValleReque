function initTerrenosModals() {
    const btnAgregarTerreno = document.getElementById("btnAgregarTerreno");
    const modal = document.getElementById("modalAgregarTerreno");
    const overlay = document.getElementById("modalOverlay");

    console.log({ btnAgregarTerreno, modal, overlay }); // ðŸ‘ˆ

    if (btnAgregarTerreno && modal && overlay) {
        btnAgregarTerreno.addEventListener("click", () => {
            modal.style.display = "block";
            overlay.style.display = "block";
        });

        document.getElementById("btn-cancelar-terreno")?.addEventListener("click", () => {
            modal.style.display = "none";
            overlay.style.display = "none";
        });

        document.getElementById("btn-cancelar-terreno-footer")?.addEventListener("click", () => {
            modal.style.display = "none";
            overlay.style.display = "none";
        });
    } else {
        console.error("Elementos no encontrados en initTerrenosModals");
    }
}
